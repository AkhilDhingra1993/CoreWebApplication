@model User
@inject IUserRepostory _userRepository;
@{
    ViewBag.Title = "Create User";
}
<form asp-controller="Home" asp-action="Create" method="post">
    <div class="row container">
        <div class="col-sm-10">
            <div class="form-group row">
                <label asp-for="FIRST_NAME">First Name</label>
                <input asp-for="FIRST_NAME" id="FIRST_NAME" name="FIRST_NAME" />
                <span asp-validation-for="FIRST_NAME" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LAST_NAME">Last Name</label>
                <input asp-for="LAST_NAME" id="LAST_NAME" name="LAST_NAME" />
            </div>
            <div class="form-group row">
                <label asp-for="EMAIL">Email</label>
                <input asp-for="EMAIL" id="EMAIL" name="EMAIL" />
                <span asp-validation-for="EMAIL" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PASSWORD">Password</label>
                <input asp-for="PASSWORD" id="PASSWORD" name="PASSWORD" />
                <span asp-validation-for="PASSWORD" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div>
                <button type="submit">Create</button>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            Total Users Count = @_userRepository.GetAllUsers().Count()
        </div>
    </div>
</form>